# API Testing Environment Variables
# Copy this file to .env and update with your actual values

# =============================================================================
# API Configuration
# =============================================================================

# Base URL for the API being tested
API_BASE_URL=http://localhost:3000

# API request timeout in milliseconds
API_TIMEOUT=5000

# API version (if versioned)
API_VERSION=v1

# =============================================================================
# Authentication
# =============================================================================

# API Key for API key authentication
API_KEY=your-api-key-here

# JWT Token for testing (can be generated via login endpoint)
JWT_TOKEN=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# JWT Secret for token generation/verification
JWT_SECRET=test-secret-key

# OAuth2 Configuration (if applicable)
OAUTH_CLIENT_ID=your-client-id
OAUTH_CLIENT_SECRET=your-client-secret
OAUTH_TOKEN_URL=https://auth.example.com/oauth/token

# =============================================================================
# Test User Credentials
# =============================================================================

# Admin user credentials for testing
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin123

# Regular user credentials for testing
TEST_USER_EMAIL=user@example.com
TEST_USER_PASSWORD=user123

# Additional test user
TEST_USER_2_EMAIL=user2@example.com
TEST_USER_2_PASSWORD=user123

# =============================================================================
# Database Configuration (for integration tests)
# =============================================================================

# PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=test_db
DB_USER=postgres
DB_PASSWORD=password
DB_SSL=false
DB_POOL_MIN=2
DB_POOL_MAX=10

# MongoDB (if using MongoDB)
MONGODB_URI=mongodb://localhost:27017/test_db

# Redis (if using Redis for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# =============================================================================
# GraphQL Configuration
# =============================================================================

# GraphQL endpoint
GRAPHQL_ENDPOINT=http://localhost:4000/graphql

# GraphQL WebSocket endpoint (for subscriptions)
GRAPHQL_WS_ENDPOINT=ws://localhost:4000/graphql

# =============================================================================
# External Services (for mocking)
# =============================================================================

# External API base URL
EXTERNAL_API_URL=https://api.external.com

# External API key
EXTERNAL_API_KEY=external-api-key

# Weather API
WEATHER_API_URL=https://api.weather.com/v1
WEATHER_API_KEY=weather-api-key

# Payment Gateway
PAYMENT_GATEWAY_URL=https://api.payment-gateway.com
PAYMENT_GATEWAY_KEY=payment-gateway-key

# Email Service
EMAIL_SERVICE_URL=https://api.email-service.com
EMAIL_SERVICE_KEY=email-service-key

# =============================================================================
# Pact Broker (for contract testing)
# =============================================================================

# Pact Broker URL
PACT_BROKER_URL=https://your-pact-broker.com

# Pact Broker authentication token
PACT_BROKER_TOKEN=your-pact-broker-token

# Pact Broker username (basic auth)
PACT_BROKER_USERNAME=pact-user

# Pact Broker password (basic auth)
PACT_BROKER_PASSWORD=pact-password

# Consumer version for pact publishing
CONSUMER_VERSION=1.0.0

# Provider version for pact verification
PROVIDER_VERSION=1.0.0

# =============================================================================
# Performance Testing Configuration
# =============================================================================

# Load test duration in seconds
LOAD_TEST_DURATION=10

# Number of concurrent connections for load testing
LOAD_TEST_CONNECTIONS=10

# Performance test iterations
PERF_TEST_ITERATIONS=100

# Performance baseline metrics file
PERF_BASELINE_FILE=./performance-baseline.json

# =============================================================================
# Test Configuration
# =============================================================================

# Test environment (development, staging, production)
TEST_ENV=development

# Enable debug logging
DEBUG=false

# Test timeout in milliseconds
TEST_TIMEOUT=30000

# Enable coverage reporting
COVERAGE_ENABLED=true

# Coverage threshold percentage
COVERAGE_THRESHOLD=80

# Retry failed tests
RETRY_FAILED_TESTS=false

# Maximum test retries
MAX_TEST_RETRIES=2

# =============================================================================
# CI/CD Configuration
# =============================================================================

# CI environment flag
CI=false

# CI build number
CI_BUILD_NUMBER=

# CI commit SHA
CI_COMMIT_SHA=

# CI branch name
CI_BRANCH=

# =============================================================================
# Logging Configuration
# =============================================================================

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# Log file path
LOG_FILE=./logs/test.log

# Enable request/response logging
LOG_REQUESTS=false

# Enable SQL query logging
LOG_SQL_QUERIES=false

# =============================================================================
# Mock Server Configuration
# =============================================================================

# Mock server port
MOCK_SERVER_PORT=3001

# Enable mock server
ENABLE_MOCK_SERVER=false

# =============================================================================
# Feature Flags (for testing different features)
# =============================================================================

# Enable rate limiting tests
FEATURE_RATE_LIMITING=true

# Enable CORS tests
FEATURE_CORS=true

# Enable caching tests
FEATURE_CACHING=true

# Enable pagination tests
FEATURE_PAGINATION=true

# =============================================================================
# Security Testing
# =============================================================================

# Enable security tests
SECURITY_TESTS_ENABLED=true

# Maximum request size in bytes
MAX_REQUEST_SIZE=1048576

# Rate limit per minute
RATE_LIMIT_PER_MINUTE=60

# =============================================================================
# Notifications (for test results)
# =============================================================================

# Slack webhook for test notifications
SLACK_WEBHOOK_URL=

# Email for test result notifications
NOTIFICATION_EMAIL=

# =============================================================================
# Custom Configuration
# =============================================================================

# Add any custom environment variables needed for your specific tests below
