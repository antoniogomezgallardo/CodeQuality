{
  "name": "api-testing-examples",
  "version": "1.0.0",
  "description": "Production-ready API testing examples covering REST, GraphQL, contract testing, integration testing, and performance testing",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:rest": "jest rest-api-supertest.test.js",
    "test:graphql": "jest graphql-api.test.js",
    "test:contract": "jest contract-testing-pact.test.js",
    "test:integration": "jest api-integration.test.js",
    "test:performance": "jest api-performance.test.js",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose",
    "pact:publish": "node scripts/publish-pacts.js",
    "pact:verify": "node scripts/verify-pacts.js"
  },
  "keywords": [
    "api-testing",
    "rest-api",
    "graphql",
    "contract-testing",
    "pact",
    "integration-testing",
    "performance-testing",
    "jest",
    "supertest",
    "examples"
  ],
  "author": "Code Quality Documentation Project",
  "license": "MIT",
  "devDependencies": {
    "@pact-foundation/pact": "^12.1.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.3"
  },
  "dependencies": {
    "express": "^4.18.2",
    "axios": "^1.6.0",
    "graphql": "^16.8.1",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "nock": "^13.4.0",
    "autocannon": "^7.14.0",
    "dotenv": "^16.3.1"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "./coverage",
    "collectCoverageFrom": [
      "**/*.test.js",
      "!**/node_modules/**",
      "!**/coverage/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "testMatch": [
      "**/*.test.js"
    ],
    "verbose": true,
    "testTimeout": 30000,
    "setupFilesAfterEnv": [
      "./jest.setup.js"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
