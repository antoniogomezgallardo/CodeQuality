{
  "name": "microservices-testing-examples",
  "version": "1.0.0",
  "description": "Comprehensive examples for testing microservices architectures",
  "main": "index.js",
  "scripts": {
    "test": "npm run test:unit && npm run test:integration && npm run test:contract && npm run test:events",
    "test:unit": "jest service-isolation.test.js --verbose",
    "test:integration": "mocha integration-tests.spec.js --timeout 30000 --exit",
    "test:contract": "npm run test:contract:consumer && npm run test:contract:provider",
    "test:contract:consumer": "jest contract-testing-consumer.test.js --runInBand",
    "test:contract:provider": "jest contract-testing-provider.test.js --runInBand",
    "test:events": "mocha event-driven-tests.spec.js --timeout 30000 --exit",
    "test:chaos": "node chaos-engineering.js",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --collectCoverageFrom='**/*.{js,jsx}' --coveragePathIgnorePatterns='/node_modules/'",
    "pact:publish": "pact-broker publish ./pacts --consumer-app-version=$npm_package_version --broker-base-url=${PACT_BROKER_URL:-http://localhost:9292} --broker-username=pact --broker-password=pact",
    "pact:can-i-deploy": "pact-broker can-i-deploy --pacticipant OrderConsumer --version $npm_package_version --to-environment production --broker-base-url=${PACT_BROKER_URL:-http://localhost:9292} --broker-username=pact --broker-password=pact",
    "docker:up": "docker-compose -f docker-compose-test.yml up -d",
    "docker:down": "docker-compose -f docker-compose-test.yml down",
    "docker:logs": "docker-compose -f docker-compose-test.yml logs -f",
    "docker:clean": "docker-compose -f docker-compose-test.yml down -v",
    "docker:ps": "docker-compose -f docker-compose-test.yml ps",
    "setup": "npm install && npm run docker:up",
    "teardown": "npm run docker:down",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "pretest": "npm run docker:up",
    "posttest": "npm run docker:down"
  },
  "keywords": [
    "microservices",
    "testing",
    "integration-testing",
    "contract-testing",
    "event-driven",
    "chaos-engineering",
    "pact",
    "rabbitmq",
    "kafka",
    "docker"
  ],
  "author": "Code Quality Project",
  "license": "MIT",
  "dependencies": {
    "amqplib": "^0.10.3",
    "axios": "^1.6.2",
    "express": "^4.18.2",
    "kafkajs": "^2.2.4",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@pact-foundation/pact": "^12.1.0",
    "@pact-foundation/pact-node": "^10.17.7",
    "chai": "^4.3.10",
    "eslint": "^8.54.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "jest": "^29.7.0",
    "mocha": "^10.2.0",
    "nock": "^13.4.0",
    "sinon": "^17.0.1",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "testTimeout": 30000,
    "verbose": true,
    "collectCoverage": false,
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testMatch": [
      "**/*.test.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/pacts/"
    ],
    "setupFilesAfterEnv": [
      "./test-setup.js"
    ]
  },
  "mocha": {
    "require": [
      "test-setup.js"
    ],
    "timeout": 30000,
    "exit": true,
    "color": true,
    "spec": [
      "**/*.spec.js"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/code-quality-examples"
  },
  "bugs": {
    "url": "https://github.com/your-org/code-quality-examples/issues"
  },
  "homepage": "https://github.com/your-org/code-quality-examples#readme"
}
