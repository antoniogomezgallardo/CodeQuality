  "escalationPolicies": [
    {
      "id": "standard-escalation",
      "name": "Standard Escalation Policy",
      "description": "Standard escalation path for all incidents",
      "rules": [
        {
          "level": 1,
          "schedule": "primary-oncall",
          "escalationDelay": 5,
          "escalationDelayUnit": "minutes",
          "notificationMethods": ["phone", "sms", "push"],
          "repeatInterval": 2,
          "repeatIntervalUnit": "minutes",
          "maxRepeats": 3
        },
        {
          "level": 2,
          "schedule": "secondary-oncall",
          "escalationDelay": 15,
          "escalationDelayUnit": "minutes",
          "notificationMethods": ["phone", "sms"],
          "repeatInterval": 2,
          "repeatIntervalUnit": "minutes",
          "maxRepeats": 3
        },
        {
          "level": 3,
          "schedule": "manager-oncall",
          "escalationDelay": 30,
          "escalationDelayUnit": "minutes",
          "notificationMethods": ["phone"],
          "repeatInterval": 5,
          "repeatIntervalUnit": "minutes",
          "maxRepeats": 2
        }
      ]
    },
    {
      "id": "critical-escalation",
      "name": "Critical Incident Escalation",
      "description": "Immediate escalation for SEV-1 incidents",
      "rules": [
        {
          "level": 1,
          "schedule": "primary-oncall",
          "escalationDelay": 0,
          "escalationDelayUnit": "minutes",
          "notificationMethods": ["phone", "sms", "push"],
          "repeatInterval": 1,
          "repeatIntervalUnit": "minutes",
          "maxRepeats": 5,
          "immediate": true
        },
        {
          "level": 2,
          "schedule": "secondary-oncall",
          "escalationDelay": 5,
          "escalationDelayUnit": "minutes",
          "notificationMethods": ["phone", "sms"],
          "repeatInterval": 1,
          "repeatIntervalUnit": "minutes",
          "maxRepeats": 5,
          "immediate": true,
          "parallel": true
        },
        {
          "level": 3,
          "schedule": "manager-oncall",
          "escalationDelay": 5,
          "escalationDelayUnit": "minutes",
          "notificationMethods": ["phone"],
          "immediate": true,
          "parallel": true,
          "notes": "Manager notified immediately for awareness"
        }
      ]
    },
    {
      "id": "business-hours-only",
      "name": "Business Hours Only",
      "description": "For non-critical alerts during business hours",
      "rules": [
        {
          "level": 1,
          "schedule": "primary-oncall",
          "escalationDelay": 30,
          "escalationDelayUnit": "minutes",
          "notificationMethods": ["email", "slack"],
          "timeRestrictions": {
            "days": ["monday", "tuesday", "wednesday", "thursday", "friday"],
            "startTime": "09:00",
            "endTime": "17:00",
            "timezone": "America/New_York"
          }
        }
      ]
    }
  ],

  "onCallHandoff": {
    "process": [
      "Review active incidents from previous week",
      "Check for any ongoing issues or concerns",
      "Review upcoming maintenance windows",
      "Verify access to all required systems",
      "Test paging mechanisms",
      "Acknowledge handoff in Slack channel"
    ],
    "checklist": [
      "PagerDuty app installed and working",
      "VPN access verified",
      "AWS console access confirmed",
      "Kubernetes access confirmed",
      "Grafana access confirmed",
      "Slack notifications enabled",
      "Phone notifications enabled",
      "Runbooks bookmarked",
      "Emergency contacts saved"
    ],
    "handoffMeeting": {
      "required": true,
      "duration": "15 minutes",
      "participants": ["outgoing on-call", "incoming on-call"],
      "agenda": [
        "Review previous week's incidents",
        "Discuss any ongoing issues",
        "Review known issues or planned maintenance",
        "Answer questions",
        "Official handoff acknowledgment"
      ]
    }
  },

  "onCallExpectations": {
    "responseTime": {
      "SEV-1": "5 minutes",
      "SEV-2": "15 minutes",
      "SEV-3": "1 hour",
      "SEV-4": "Next business day"
    },
    "availability": {
      "description": "On-call engineer must be available to respond",
      "requirements": [
        "Phone and laptop within reach at all times",
        "Reliable internet connection",
        "Able to join incident calls within 5 minutes",
        "Able to access production systems"
      ],
      "restrictions": [
        "No international travel during on-call week",
        "Minimize activities that impair judgment (alcohol, etc.)",
        "No activities preventing immediate response"
      ]
    },
    "responsibilities": [
      "Acknowledge pages within response time SLA",
      "Begin investigation immediately",
      "Follow runbooks and escalation procedures",
      "Communicate regularly during incidents",
      "Document all actions taken",
      "Create follow-up tickets for issues found",
      "Update runbooks with new learnings"
    ],
    "coverage": {
      "vacation": "Find coverage or swap with team member minimum 1 week in advance",
      "sick": "Notify team immediately, manager will find coverage",
      "emergency": "Notify team immediately, secondary on-call takes over"
    }
  },

  "compensationAndSupport": {
